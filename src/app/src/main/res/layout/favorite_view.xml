<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/favorite_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_favorite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/favorite_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="1"
        android:textColor="@color/theme"
        android:textSize="13sp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_favorite_share" />

    <TextView
        android:id="@+id/favorite_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="When you can't control what's happening, challenge yourself to control the way you respond. That's where your power is."
        android:textColor="@color/text_favorite"
        android:textSize="14sp"
        android:alpha=".54"/>
</RelativeLayout>