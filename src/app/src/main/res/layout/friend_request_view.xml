<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/friend_request_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/avatar_15" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/friend_request_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Sophie"
            android:textColor="#5F4322"
            android:textSize="28sp" />

        <Button
            android:id="@+id/btn_accept_friend_request"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/friend_request_nickname"
            android:backgroundTint="#FF5C5F"
            android:fontFamily="@font/open_sans_extrabold"
            android:text="Accept"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_delete_friend_request"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/friend_request_nickname"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/btn_accept_friend_request"
            android:backgroundTint="#D8D5D5"
            android:fontFamily="@font/open_sans_extrabold"
            android:text="Delete"
            android:textColor="#535353"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>